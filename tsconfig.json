{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc", // Directory for compiled output
    "skipLibCheck": true, // Skip type checking of all declaration files (*.d.ts)
    "esModuleInterop": true, // Emit additional JS for interop with non-ES modules
    "sourceMap": true, // Generate source maps for debugging
    "declaration": false, // Do not generate declaration files (*.d.ts)
    "experimentalDecorators": true, // Enable experimental support for decorators
    "moduleResolution": "node", // Module resolution strategy
    "importHelpers": true, // Import emit helpers from tslib
    "target": "ES2022", // Specify ECMAScript target version
    "module": "ES2022", // Specify module code generation
    "useDefineForClassFields": false, // Use define for class fields (this should be false in most cases for Angular)
    "lib": [
      "ES2022", // Include ES2022 library
      "dom" // Include DOM library
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false // Disable legacy message id format for i18n
  }
}
